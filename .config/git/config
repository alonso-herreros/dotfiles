[user]
	email = alonso.herreros.c@gmail.com
	name = Alonso Herreros

[core]
    editor = vim
    pager = less -x5,9
    excludesFile = $XDG_CONFIG_HOME/git/gitignore

[alias]
	s = status
    l = log --oneline

    a = add
    c = commit
    cm = commit -m
    cc = commit .
    ccm = commit . -m
    ca = commit --amend
    cane = commit --amend --no-edit

    d = diff
    m = merge
    mt = mergetool
    co = checkout
    cob = checkout -b

    uncommit = reset --soft HEAD^

[init]
    defaultBranch = main

[status]
    submoduleSummary = true

[log]
    decorate = short
    abbrevCommit = true

[push]
    autoSetupRemote = true

[pull]
    ff = only

[merge]
    conflictstyle = zdiff3
    tool = vimdiff

[mergetool]
    tool = vimdiff
    hideResolve=true
    writeToTemp=true

[mergetool.vimdiff]
    layout = "LOCAL,REMOTE / MERGED + MERGED,REMOTE"

[diff]
    algorithm = histogram
    colorMoved = default
    submodule = log

[submodule]
    recurse = true

[help]
    autocorrect = prompt

[url "git@github.com:"]
    pushInsteadOf = "https://github.com/"
    insteadOf = "gh:"


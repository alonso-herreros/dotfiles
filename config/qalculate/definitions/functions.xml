<?xml version="1.0"?>
<QALCULATE version="5.7.0">
  <category>
    <title>Traffic Modeling</title>
    <function>
      <title>Erlang C</title>
      <names>r:ErlangC</names>
      <description>Probability of a user waiting in queue for an M/M/c system</description>
      <example>ErlangC(3, 1.7)</example>
      <subfunction precalculate="true">\y/\x</subfunction>
      <subfunction precalculate="true">( \y^\x/(factorial(\x)*(1-\1)) + sum(\y^n/factorial(n),0,\x-1,n) )^-1</subfunction>
      <expression>\2 * \y^\x/(factorial(\x)*(1-\1))</expression>
      <argument type="integer" index="1">
        <title>c: Number of servers</title>
        <min>1</min>
      </argument>
      <argument type="number" index="2">
        <title>Ao: Offered traffic</title>
        <min include_equals="true">0</min>
      </argument>
    </function>
    <function>
      <title>Erlang B</title>
      <names>r:ErlangB</names>
      <description>Probability of a user being blocked for an M/M/c/c system</description>
      <example>ErlangB(3, 1.7)</example>
      <expression>\x^\y/factorial(\x) / sum(\y^i/factorial(i), 0, \x, i)</expression>
      <argument type="integer" index="1">
        <title>c: Number of servers</title>
        <min>1</min>
      </argument>
      <argument type="number" index="2">
        <title>Ao: Offered traffic</title>
        <min include_equals="true">0</min>
      </argument>
    </function>
  </category>
</QALCULATE>

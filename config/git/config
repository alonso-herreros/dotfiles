[user]
	email = alonso.herreros.c@gmail.com
	name = Alonso Herreros

[core]
    editor = vim
    pager = less -x5,9

[alias]
    i = init
	s = status
    l = log --oneline
    ls = log --oneline -n 10

    a = add
    aa = add -A
    ap = add --patch
    r = restore
    rr = restore .
    rs = restore --staged
    rrs = restore . --staged

    c = commit
    cm = commit -m
    cmp = "!cmp() { git commit -m \"$@\"; git push; }; cmp"
    cc = commit -a
    ccm = commit -am
    ccmp = "!ccmp() { git commit -am \"$@\"; git push; }; ccmp"
    ca = commit --amend
    cane = commit --amend --no-edit

    d = diff
    ds = diff --cached

    m = merge
    mt = mergetool

    b = branch
    co = checkout
    cob = checkout -b

    uncommit = reset --soft HEAD^
    unstage = resetÂ HEAD --

[init]
    defaultBranch = main

[status]
    submoduleSummary = true

[log]
    decorate = short
    abbrevCommit = true

[push]
    autoSetupRemote = true

[pull]
    ff = only

[merge]
    conflictstyle = zdiff3
    tool = vimdiff

[mergetool]
    tool = vimdiff
    hideResolve=true
    writeToTemp=true

[mergetool.vimdiff]
    layout = "LOCAL,REMOTE / MERGED + MERGED,REMOTE"

[diff]
    algorithm = histogram
    colorMoved = default
    submodule = log

[submodule]
    recurse = true

[help]
    autocorrect = prompt

[advice]
    addIgnoredFile = false

[url "git@github.com:"]
    pushInsteadOf = "https://github.com/"
    insteadOf = "gh:"

[url "git@gitlab.com:"]
    pushInsteadOf = "https://gitlab.com/"
    insteadOf = "gl:"


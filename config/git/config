[user]
    email = alonso.herreros.c@gmail.com
    name = Alonso Herreros

[core]
    editor = vim
    pager = less -eFRx5,9

[alias]
    i    = init

    s    = status
    ss   = status --short

    l    = log --oneline               # Log (oneline by default)
    ls   = log --oneline -n 10         # Log short
    la   = log --oneline --all --graph # Log all (in graph)
    las  = log --oneline --all --graph -n 10 # Log all short (in graph)
    ll   = log                         # Log long (with details)
    lla  = log --all --graph           # Log long all (graph, with details)

    a    = add
    aa   = add -A
    ap   = add --patch
    r    = restore
    rr   = restore .
    rs   = restore --staged
    rrs  = restore . --staged

    c    = commit
    cm   = commit -m
    cmp  = "!cmp()  { git commit -m \"$@\"; git push; }; cmp"
    cc   = "!cc()   { git add -A; git commit; }; cc"
    ccm  = "!ccm()  { git add -A; git commit -m \"$@\"; }; ccm"
    ccmp = "!ccmp() { git add -A; git commit -m \"$@\"; git push; }; ccmp"
    ca   = commit --amend
    cane = commit --amend --no-edit

    d    = diff
    ds   = diff --cached

    m    = merge
    mt   = mergetool

    b    = branch
    co   = checkout
    cob  = checkout -b
    c-   = checkout -

    Rv   = remote --verbose
    Ra   = remote add
    Rao  = remote add origin

    uncommit = reset --soft HEAD^
    unstage = resetÂ HEAD --

[init]
    defaultBranch = main

[status]
    submoduleSummary = true

[log]
    date = human
    decorate = short
    abbrevCommit = true
    follow = true

[blame]
    blankBoundary = true
    coloring = repeatedLines
    date = human

[push]
    autoSetupRemote = true

[pull]
    ff = only

[merge]
    conflictstyle = zdiff3
    tool = vimdiff

[mergetool]
    tool = vimdiff
    hideResolve=true
    writeToTemp=true
    # prompt = false

[mergetool.vimdiff]
    layout = "LOCAL,REMOTE / MERGED + MERGED,REMOTE"

[diff]
    algorithm = histogram
    colorMoved = default
    submodule = log

[submodule]
    recurse = true

[help]
    autocorrect = prompt

[advice]
    addIgnoredFile = false

[url "git@github.com:"]
    pushInsteadOf = "https://github.com/"
    insteadOf = "gh:"

[url "git@gitlab.com:"]
    pushInsteadOf = "https://gitlab.com/"
    insteadOf = "gl:"


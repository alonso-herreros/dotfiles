// vi: ft=jsonc
{
    // When selecting 'next', start at the first suggestion
    "suggest.noselect": true,
    "inlayHint.display": false,

    "diagnostic.errorSign": "!",
    "diagnostic.warningSign": "*",
    "diagnostic.infoSign": "i",

    // ===== Language servers =====
    "languageserver": {
        "ghdl": {
            "command": "ghdl-ls",
            "filetypes": [ "vhdl" ]
        }
    },

    // ---- Markdownlint ----
    "markdownlint.config": {
        // https://github.com/DavidAnson/markdownlint/blob/v0.31.1/doc/Rules.md
        "MD001": false, // Heading increment by 1
        "MD007": {"indent": 4},                    // UL indentation
        "MD012": {"maximum": 3},                   // Multiple consecutive blank lines
        "MD013": { // Line length
            "tables": false,
            "code_blocks": false,
            "stern": true
        },
        "MD022": {                                 // Blanks around headers
            "lines_above": [1, 3, 2, 1, 1, 1],
            "lines_below": [2, 1, 1, 0, 0, 0]
        },
        // "MD024": {"siblings_only": true}, // No duplicate heading
        "MD025": {"front_matter_title": ""}, // Single H1
        "MD027": false, // Multiple spaces after blockquote
        "MD033": false, // Inline HTML
        "MD036": false, // No emphasis as header
        "MD038": false, // Spaces inside code spans
        "MD041": false, // First line H1
        "MD046": false, // Expected fenced code blocks
        "MD049": false  // Emphasis style consistent
    }
}
